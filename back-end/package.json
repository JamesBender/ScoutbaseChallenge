{
  "name": "back-end",
  "version": "1.0.0",
  "description": "Scoutbase Challenge",
  "main": "app.js",
  "scripts": {
    "test": "jest --watch",
    "start": "DEBUG=app,app:* nodemon app.js",
    "lint": "eslint ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JamesBender/ScoutbaseChallenge.git"
  },
  "author": "James Bender",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/JamesBender/ScoutbaseChallenge/issues"
  },
  "homepage": "https://github.com/JamesBender/ScoutbaseChallenge#readme",
  "dependencies": {
    "apollo-server-express": "^2.8.2",
    "body-parser": "^1.19.0",
    "chalk": "^2.4.2",
    "cors": "^2.8.5",
    "debug": "^4.1.1",
    "express": "^4.17.1",
    "graphql": "^14.4.2",
    "graphql-tools": "^4.0.5",
    "morgan": "^1.9.1",
    "nodemon": "^1.19.1"
  },
  "devDependencies": {
    "eslint": "^6.2.1",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jest": "^22.15.2",
    "jest": "^24.9.0"
  },
  "nodemonConfig": {
    "restartable": "rs",
    "ignore": [
      "node_modules/**/node_modules",
      "./**/*.{spec, test}.js"
    ],
    "delay": "2500",
    "env": {
      "NODE_ENV": "development",
      "PORT": 8090
    }
  },
  "jest": {
    "collectCoverageFrom": [
      "./**/*.{js, jsx, ts, tsx, json}",
      "!<rootDir>/node_modules/",
      "!<rootDir>/coverage/lcov-report/*",
      "!./typeDefs.js",
      "!./app.js"
    ]
  }
}
